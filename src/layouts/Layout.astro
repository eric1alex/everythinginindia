---
// 1. Update the Props interface to accept optional SEO metadata
interface Props {
	title: string;
    description?: string;
    ogImage?: string;
}

// 2. Set default values for the new props
const { 
    title, 
    description = "A curated travel directory for India. Stop getting lost on Google.", 
    ogImage = "https://placehold.co/1200x630/1a1a1a/ffffff?text=Where+In+India" // Default social card
} = Astro.props;

// 3. Get the full page URL
const canonicalURL = Astro.url.href;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<!-- <meta name="description" content="A curated travel directory for India" /> --> <!-- Replaced by new tag -->
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		
		<!-- Stylesheet -->
		<link rel="stylesheet" href="/styles/global.css">
		<link rel="stylesheet" href="/styles/header-footer.css">
		<link rel="stylesheet" href="/styles/floating-button.css">

		<!-- 
		  =================================
		  START: SEO & Social Media Meta Tags
		  =================================
		-->
        <!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImage} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={canonicalURL} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={ogImage} />
		<!-- 
		  =================================
		  END: SEO & Social Media Meta Tags
		  =================================
		-->

		<!-- <title>{title}</title> --> <!-- This is now redundant -->

		<!-- 
		  =================================
		  START: Google Analytics 4 (GA4) Snippet
		  =================================
		-->
		<!-- This is your exact code, with `is:inline` added -->
		<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-K6T8GBK4MF"></script>
		<script is:inline>
		  window.dataLayer = window.dataLayer || [];
		  function gtag(){dataLayer.push(arguments);}
		  gtag('js', new Date());

		  gtag('config', 'G-K6T8GBK4MF');
		</script>
		<!-- 
		  =================================
		  END: Google Analytics 4 (GA4) Snippet
		  =================================
		-->

	</head>
	<body>
		<!-- Site Header -->
		<header class="site-header">
			<nav class="header-nav">
				<a href="/" class="header-logo">Where In India</a>
				<a href="https://docs.google.com/forms/d/e/1FAIpQLScOGneda4XsF2NyMZeto6f59Niz4R8bn7eKFPPAQ4ymaEE6Vw/viewform?usp=dialog" class="header-submit"  target="_blank" rel="noopener noreferrer" >Submit Your Place</a>
			</nav>
		</header>

		<!-- Main Page Content -->
		<main>
			<slot /> <!-- Your page content (index.astro or [city].astro) goes here -->
		</main>

		<!-- New Site Footer -->
		<footer class="site-footer">
		<footer class="site-footer">
    <div class="footer-grid">
        <!-- Column 1: About Us / Mission -->
        <div class="footer-column">
            <h4 class="footer-heading">About Us</h4>
            <p class="footer-text">
                "Where In India" is a hand-curated travel directory built for easy exploration and trip planning. Stop getting lost on Google.
            </p>
        </div>

        <!-- Column 2: Other Travel Ventures -->
        <div class="footer-column">
            <h4 class="footer-heading">Other Travel Ventures</h4>
            <ul class="footer-list">
                <li><a href="https://in.pinterest.com/TravelIndiaNow/" class="footer-link" target="_blank" rel="noopener noreferrer">Travel India Now | Pinterest</a></li>
                <li><a href="https://www.instagram.com/prints.loft/" class="footer-link" target="_blank" rel="noopener noreferrer" >Prints Loft | Get your Travel Prints</a></li>
            </ul>
        </div>

        <!-- Column 3: Audience -->
        <div class="footer-column">
            <h4 class="footer-heading">Audience</h4>
            <ul class="footer-list">
                <li><a href="https://forms.gle/CJzzX4q2gN9K2HWq9" class="footer-link"  target="_blank" rel="noopener noreferrer" >Submit Your Travel Stories</a></li>
                <li><a href="https://forms.gle/JqRqaRjVqDba1Dso7" class="footer-link"  target="_blank" rel="noopener noreferrer" >Submit Your Places</a></li>
            </ul>
        </div>

        <!-- Column 4: Donate -->
        <div class="footer-column">
            <h4 class="footer-heading">Support Us</h4>
            <p class="footer-text">If you find this useful, consider supporting us!</p>
            <a href="#" class="footer-donate-button">Donate</a>
        </div>
    </div>
		</footer>

		<!-- City Page Fade-in Script -->
		<script is:raw src="/scripts/main.js"></script>
	</body>
</html>



