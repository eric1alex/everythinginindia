---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A curated travel directory for India" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"  rel="stylesheet">
		
		<!-- Stylesheet -->
		<link rel="stylesheet" href="/styles/global.css">
		<link rel="stylesheet" href="/styles/header-footer.css">

		<title>{title}</title>
	</head>
	<body>
		<!-- Site Header -->
		<header class="site-header">
			<nav class="header-nav">
				<a href="/" class="header-logo">Where In India</a>
				<a href="https://docs.google.com/forms/d/e/1FAIpQLScOGneda4XsF2NyMZeto6f59Niz4R8bn7eKFPPAQ4ymaEE6Vw/viewform?usp=dialog" target="_blank" rel="noopener noreferrer" class="header-submit">Submit</a>
			</nav>
		</header>

		<!-- Main Page Content -->
		<main>
			<slot /> <!-- Your page content (index.astro or [city].astro) goes here -->
		</main>

		<!-- New Site Footer -->
		<footer class="site-footer">
			<div class="footer-grid">
				<!-- Column 1: About Us / Mission -->
				<div class="footer-column">
					<h4 class="footer-heading">About Us</h4>
					<p class="footer-text">
						"Where In India" is a well-curated travel directory built for easy exploration and trip planning. Stop getting lost on Google.
					</p>
				</div>

				<!-- Column 2: Other Travel Ventures -->
				<div class="footer-column">
					<h4 class="footer-heading">Other Travel Ventures</h4>
					<ul class="footer-list">
						<li><a href="https://www.instagram.com/prints.loft/" class="footer-link">Prints Loft | Get your Travel Prints</a></li>
						<li><a href="https://in.pinterest.com/TravelIndiaNow/" class="footer-link">Travel India Now | Pinterest</a></li>
					</ul>
				</div>

				<!-- Column 3: Audience -->
				<div class="footer-column">
					<h4 class="footer-heading">Audience Submissions</h4>
					<ul class="footer-list">
						<li><a href="https://docs.google.com/forms/d/e/1FAIpQLSeO9jhg7iJSMIZjVcFWyLhkKCzkSPImuOplbRP8E8VYypK3ng/viewform?usp=publish-editor" class="footer-link" target="_blank" rel="noopener noreferrer">Submit Your Travel Stories</a></li>
						<li><a href="https://docs.google.com/forms/d/e/1FAIpQLScOGneda4XsF2NyMZeto6f59Niz4R8bn7eKFPPAQ4ymaEE6Vw/viewform?usp=dialog" class="footer-link" target="_blank" rel="noopener noreferrer">Submit Your Places</a></li>
					</ul>
				</div>

				<!-- Column 4: Donate -->
				<div class="footer-column">
					<h4 class="footer-heading">Support Us</h4>
					<p class="footer-text">If you find this useful, consider supporting us!</p>
					<a href="https://razorpay.me/@ericalex" class="footer-donate-button" target="_blank" rel="noopener noreferrer">Donate</a>
				</div>
			</div>

		<!-- City Page Fade-in Script -->
		<script is:raw src="/scripts/main.js"></script>
	</body>
</html>

