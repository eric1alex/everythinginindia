<style>
    .popup-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(8px);
        z-index: 9999;
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.5s ease;
        padding: 1rem;
    }

    .popup-overlay.visible {
        opacity: 1;
        pointer-events: auto;
    }

    .hidden {
        display: none;
    }

    .popup-card {
        background: #ffffff;
        width: 100%;
        max-width: 900px;
        border-radius: 20px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        position: relative;
        transform: translateY(20px);
        transition: transform 0.5s cubic-bezier(0.22, 1, 0.36, 1);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .popup-overlay.visible .popup-card {
        transform: translateY(0);
    }

    /* Horizontal Layout for Desktop */
    @media (min-width: 768px) {
        .popup-card {
            flex-direction: row;
            height: auto;
            min-height: 450px;
        }

        .popup-image-container {
            flex: 1.1;
            position: relative;
            height: auto;
        }

        .popup-content {
            flex: 1;
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: left;
        }

        .popup-image {
            position:;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .close-btn {
            color: #666; /* Use dark color on white background */
        }
    }

    /* Mobile Layout */
    @media (max-width: 767px) {
        .popup-image-container {
            height: 180px; /* Slightly shorter on mobile */
            width: 100%;
            position: relative; /* Crucial: contains the absolute image */
        }

        .popup-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .popup-content {
            padding: 1.5rem;
            text-align: center;
        }

        .popup-headline {
            font-size: 1.7rem !important; /* Increased headline */
            margin-bottom: 0.5rem !important;
        }

        .headline-emoji {
            font-size: 2rem !important;
            margin-top: 0.25rem !important;
        }

        .popup-body {
            font-size: 0.95rem !important; /* Decreased body text */
            margin-bottom: 1.25rem !important;
            line-height: 1.5;
        }

        .cta-button {
            width: 100%;
            padding: 12px 24px;
            font-size: 1rem !important;
        }
    }

    .popup-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .close-btn {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 50%;
        width: 36px;
        height: 36px;
        border: none;
        font-size: 24px;
        color: #333;
        cursor: pointer;
        line-height: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        z-index: 10;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .close-btn:hover {
        background: white;
        transform: scale(1.1);
    }

    .popup-headline {
        font-family: "Inter", sans-serif;
        font-size: 2rem;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 1.5rem;
        line-height: 1.3;
    }

    .headline-text {
        background: linear-gradient(135deg, #ff9933 0%, #d44218 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: inline-block; /* Ensure gradient works properly */
    }

    .popup-body {
        font-family: "Inter", sans-serif;
        font-size: 1.15rem;
        color: #2d2d2d;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .cta-button {
        display: inline-block;
        background: linear-gradient(135deg, #ff9933 0%, #ff512f 100%);
        color: white;
        font-family: "Inter", sans-serif;
        font-weight: 600;
        font-size: 1.15rem;
        padding: 14px 32px;
        border-radius: 50px;
        text-decoration: none;
        box-shadow: 0 4px 15px rgba(255, 81, 47, 0.3);
        transition:
            transform 0.2s,
            box-shadow 0.2s;
        align-self: flex-start; /* For flex container */
    }

    @media (max-width: 767px) {
        .cta-button {
            align-self: center; /* Center on mobile */
            width: 100%;
        }
        .popup-headline {
            font-size: 1.75rem;
        }
    }

    .cta-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(255, 81, 47, 0.4);
    }

    .small-print {
        margin-top: 1rem;
        font-size: 0.85rem;
        color: #888;
        font-style: italic;
    }

    .headline-emoji {
        font-size: 2.2rem;
        display: inline-block;
        margin-top: 0.5rem;
    }
</style>

<script>
    const popup = document.getElementById("shivratri-popup");
    const closeBtn = document.getElementById("close-popup");

    if (popup && closeBtn) {
        // Check if popup has been shown in this session
        const hasSeenPopup = sessionStorage.getItem("shivratri_popup_seen");

        if (!hasSeenPopup) {
            setTimeout(() => {
                popup.classList.remove("hidden");
                // Force reflow
                void popup.offsetWidth;
                popup.classList.add("visible");
                sessionStorage.setItem("shivratri_popup_seen", "true");
            }, 1000);
        }

        closeBtn.addEventListener("click", () => {
            popup.classList.remove("visible");
            setTimeout(() => {
                popup.classList.add("hidden");
            }, 500); // Wait for transition
        });

        // Close on click outside
        popup.addEventListener("click", (e) => {
            if (e.target === popup) {
                popup.classList.remove("visible");
                setTimeout(() => {
                    popup.classList.add("hidden");
                }, 500);
            }
        });
    }
</script>
