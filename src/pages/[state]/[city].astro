// --- GET STATIC PATHS ---
// (No changes needed to loading logic, checking imports below)

import Layout from '~/layouts/Layout.astro';
import locations from '~/data/locations.json';
import FeedbackPopup from '~/components/FeedbackPopup.astro';
import RelatedDestinations from '~/components/RelatedDestinations.astro';
import CityRequestWidget from '~/components/CityRequestWidget.astro';
import CityDashboard from '~/components/CityDashboard.astro';
import Breadcrumbs from '~/components/Breadcrumbs.astro';
import CityFAQ from '~/components/CityFAQ.astro';
import MapView from '~/components/MapView.astro';

// --- DATA LOADING (Coordinates) ---
// Try to load coordinates data safely
let coordinatesData: any = {};
try {
    coordinatesData = await import("~/data/coordinates.json").then(
        (m) => m.default,
    );
} catch (e) {
    // Coordinates not generated yet
}

// ... existing form constants ...
const FEEDBACK_FORM_URL = "https://docs.google.com/forms/d/e/1FAIpQLSerku0WY4t5LWlWBEoSYmoWqUiWKNDpLMzb_6R8T7LoqRHUag/formResponse";
const CITY_ENTRY_ID = "entry.693458303";
const HELPFUL_ENTRY_ID = "entry.1400638291";
const FEEDBACK_ENTRY_ID = "entry.1933085880";
const REQUEST_FORM_URL = "https://docs.google.com/forms/d/e/1FAIpQLSf9A2_VeOdq71UAhs8u2ttB6WJlljMl0PdGcEJIlwZ3meFnBA/formResponse";
const REQUEST_ENTRY_ID = "entry.1044411969";
const REQUEST_EMAIL_ENTRY_ID = "entry.886669140"; 

// ... getStaticPaths function (omitted for brevity, unchanged) ...
export async function getStaticPaths() {
  const allCityData = await import.meta.glob('../../data/cities/*.json');
  const allPages = [];

  const processLocations = async (locList) => {
    for (const loc of locList) {
      for (const city of loc.cities) {
        
        const importPath = `../../data/cities/${city.slug}.json`;
        let placesData = null;

        if (allCityData[importPath]) {
          const cityDataModule = await allCityData[importPath]();
          placesData = cityDataModule.default;
        }

        allPages.push({ 
          params: { 
            state: loc.slug, 
            city: city.slug 
          },
          props: {
            cityName: city.name,
            stateName: loc.name,
            heroImageUrl: city.imageUrl || "https://placehold.co/1200x600/ccc/aaa?text=Where+In+India",
            places: placesData,
            currentStateSlug: loc.slug,
            dashboardData: city.dashboard || null,
            mapUrl: city.mapUrl || "#" 
          }
        });
      }
    }
  };

  await processLocations(locations.states);
  await processLocations(locations.unionTerritories);

  return allPages;
}

const { cityName, stateName, heroImageUrl, places, currentStateSlug, dashboardData, mapUrl } = Astro.props;
const currentCitySlug = Astro.params.city;

// Helper function to create listicle slugs
function slugify(text: string): string {
  return text
    .toLowerCase()
    .replace(/&/g, "and")
    .replace(/[^a-z0-9]+/g, "-")
    .replace(/(^-|-$)/g, "");
}

// --- PREPARE MAP DATA ---
const cityCoords = coordinatesData[currentCitySlug] || {};
const allMapItems: any[] = [];

if (places) {
    places.forEach((category: any) => {
        const catSlug = slugify(category.title);
        const catCoords = cityCoords[catSlug] || [];
        
        category.items.forEach((item: any) => {
            const coord = catCoords.find((c: any) => c.name === item.name);
            if (coord && coord.lat && coord.lng) {
                allMapItems.push({
                    name: item.name,
                    url: item.url,
                    lat: coord.lat,
                    lng: coord.lng,
                    category: category.title,
                    emoji: category.emoji
                });
            }
        });
    });
}
const hasMapData = allMapItems.length > 0;

// ... suggestions list logic (unchanged) ...
const allCitiesList: any[] = [];
[...locations.states, ...locations.unionTerritories].forEach(loc => {
    loc.cities.forEach(c => {
        if (c.lat && c.lon) {
            allCitiesList.push({
                slug: c.slug,
                stateSlug: loc.slug,
                name: c.name,
                lat: c.lat,
                lon: c.lon,
                imageUrl: c.imageUrl
            });
        }
    });
});

const filteredSuggestions = allCitiesList
    .filter(c => c.slug !== currentCitySlug)
    .sort(() => 0.5 - Math.random())
    .slice(0, 3);

---

<Layout 
  title={`${cityName} Travel Guide: Best Hotels, Cafes, Restaurants & Attractions`}
  description={`Discover the best of ${cityName}, ${stateName} with curated lists of hotels, cafes, restaurants, top attractions and more. A simple, trusted guide to plan your trip.`}
  ogImage={heroImageUrl}
>
  <main>
    {places ? (
      <>
        <header class="hero">
          <div 
            class="hero-image hero-image-city" 
            style={`background-image: url(${heroImageUrl});`}
          ></div>
          
          <div class="hero-text">
            <h1>The most trusted guide to {cityName}</h1>
            <p>Discover handpicked places, experiences, and local favorites in {stateName}</p>
          </div>
        </header>

        <div class="main-content">
          <!-- Breadcrumb Row with Actions -->
          <div class="breadcrumb-row">
            <Breadcrumbs 
              stateName={stateName} 
              stateSlug={currentStateSlug}
              cityName={cityName}
              citySlug={currentCitySlug}
            />
            
            <div class="action-buttons">
                {hasMapData && (
                    <button 
                      id="map-toggle-btn" 
                      class="action-btn"
                      aria-label="Toggle Map View"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6"></polygon>
                        <line x1="8" y1="2" x2="8" y2="18"></line>
                        <line x1="16" y1="6" x2="16" y2="22"></line>
                      </svg>
                      <span class="btn-text">Map View</span>
                    </button>
                )}

                <button 
                  id="share-btn" 
                  class="action-btn share-btn"
                  data-url={`https://www.whereinindia.online/${currentStateSlug}/${currentCitySlug}`}
                  data-title={`Best places to visit in ${cityName} - Where In India`}
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"/>
                    <polyline points="16 6 12 2 8 6"/>
                    <line x1="12" y1="2" x2="12" y2="15"/>
                  </svg>
                  Share
                  <span class="share-tooltip">Link copied!</span>
                </button>
            </div>
          </div>

          <!-- Map View Container (Hidden by default) -->
          {hasMapData && (
              <div id="city-map-container" class="city-map-container" style="display: none;">
                  <MapView 
                      items={allMapItems} 
                      cityName={cityName} 
                      categoryTitle="All Places" 
                      categoryEmoji="üìç" 
                  />
                  <div class="map-view-toggle-back">
                      <button id="back-to-list-btn" class="back-link">
                          ‚Üê Back to Suggestions
                      </button>
                  </div>
              </div>
          )}

          <!-- Recommendation Grid (Default View) -->
          <div id="recommendation-grid" class="recommendation-grid">
            {places.map((category: any) => (
              <div class="recommendation-card">
                <h2>
                  <span class="emoji">{category.emoji}</span>
                  {category.title}
                </h2>
                <ol>
                  {category.items.map((item: any) => (
                    <li>
                      <a href={item.url} target="_blank" rel="noopener noreferrer">{item.name}</a>
                    </li>
                  ))}
                </ol>
                <a 
                  href={`/${currentStateSlug}/${currentCitySlug}/best-${slugify(category.title)}`} 
                  class="listicle-link"
                >
                  Read full guide ‚Üí
                </a>
              </div>
            ))}
          </div>

          <!-- NEW: City Dashboard Component -->
          <CityDashboard dashboard={dashboardData} mapUrl={mapUrl} />

          <!-- FAQ Section -->
          {dashboardData && (
            <CityFAQ cityName={cityName} dashboard={dashboardData} />
          )}

          <RelatedDestinations
            currentCitySlug={currentCitySlug}
            allCities={allCitiesList}
          />

          <CityRequestWidget 
             formUrl={REQUEST_FORM_URL}
             cityEntryID={REQUEST_ENTRY_ID}
             emailEntryID={REQUEST_EMAIL_ENTRY_ID}
          />

          <FeedbackPopup 
            cityName={cityName}
            formUrl={FEEDBACK_FORM_URL}
            cityEntry={CITY_ENTRY_ID}
            helpfulEntry={HELPFUL_ENTRY_ID}
            feedbackEntry={FEEDBACK_ENTRY_ID}
          />
          
        </div>
      </>
    ) : (
      // ... coming soon section (retained from original file) ...
      <div class="coming-soon-container">
        <h1 class="coming-soon-title">Coming Soon!</h1>
        <p class="coming-soon-text">
          We haven't built our guide for <strong>{cityName}</strong> just yet. 
        </p>
        <p class="coming-soon-text">
          Know a great spot? Be the first to contribute and help us build this page!
        </p>
        <a href="https://docs.google.com/forms/d/e/1FAIpQLScOGneda4XsF2NyMZeto6f59Niz4R8bn7eKFPPAQ4ymaEE6Vw/viewform?usp=dialog" target="_blank" rel="noopener noreferrer" class="coming-soon-button">Contribute a Place</a>
        
        {filteredSuggestions.length > 0 && (
          <div class="suggestions-container">
            <h2 class="suggestions-title">In the meantime, you might want to check out...</h2>
            <div class="suggestions-grid">
              {filteredSuggestions.map((city: any) => (
                <a href={`/${city.stateSlug}/${city.slug}`} class="suggestion-card" style={`background-image: url(${city.imageUrl})`}>
                  <div class="suggestion-card-content">
                    <h3>{city.name}</h3>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    )}
  </main>

  <style>
    .breadcrumb-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.5rem 0;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .action-btn {
      display: flex;
      align-items: center;
      gap: 0.35rem;
      background: #fff;
      border: 1px solid #ddd;
      padding: 0.4rem 0.8rem;
      border-radius: 6px;
      font-size: 0.8rem;
      color: #555;
      cursor: pointer;
      transition: all 0.2s ease;
      position: relative;
      font-family: inherit;
      font-weight: 500;
      line-height: 1;
    }

    .action-btn:hover {
      background: #f9f9f9;
      border-color: #bbb;
      color: #222;
      transform: translateY(-1px);
    }
    
    .action-btn.active {
        background: #1a1a1a;
        color: #fff;
        border-color: #1a1a1a;
    }

    .share-tooltip {
      position: absolute;
      top: 100%;
      right: 0;
      margin-top: 6px;
      background: #333;
      color: #fff;
      font-size: 0.65rem;
      padding: 0.25rem 0.5rem;
      border-radius: 3px;
      white-space: nowrap;
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
      transition: opacity 0.2s ease;
      z-index: 10;
    }

    .share-btn.copied .share-tooltip {
      opacity: 1;
      visibility: visible;
    }

    /* Map View Styles */
    .city-map-container {
        margin-bottom: 2rem;
        animation: fadeIn 0.3s ease;
    }
    
    .map-view-toggle-back {
        text-align: center;
        margin-top: 1rem;
    }
    
    .back-link {
        background: none;
        border: none;
        color: #666;
        text-decoration: underline;
        cursor: pointer;
        font-size: 0.9rem;
        padding: 0.5rem;
    }
    
    .back-link:hover {
        color: #1a1a1a;
    }
    
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    /* Visually hidden link for SEO */
    .listicle-link {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }

    @media (min-width: 640px) {
      .breadcrumb-row {
        padding: 0.75rem 0;
      }
    }
  </style>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        // ... (Info/Tooltip logic omitted, assuming standard layout logic handled elsewhere or if needed) ...

        // Toggle Map/Grid Logic
        const mapToggleBtn = document.getElementById('map-toggle-btn');
        const backToListBtn = document.getElementById('back-to-list-btn');
        const mapContainer = document.getElementById('city-map-container');
        const gridContainer = document.getElementById('recommendation-grid');

        if (mapToggleBtn && mapContainer && gridContainer) {
            function showMap() {
                mapContainer.style.display = 'block';
                gridContainer.style.display = 'none';
                mapToggleBtn.classList.add('active');
                mapToggleBtn.querySelector('.btn-text').textContent = "Grid View";
                
                // Fix map rendering
                setTimeout(() => {
                    window.dispatchEvent(new Event('resize'));
                }, 100);
            }
            
            function showGrid() {
                mapContainer.style.display = 'none';
                gridContainer.style.display = 'grid'; // Assuming grid layout
                mapToggleBtn.classList.remove('active');
                mapToggleBtn.querySelector('.btn-text').textContent = "Map View";
            }
            
            // Toggle function
            mapToggleBtn.addEventListener('click', () => {
                const isMapVisible = mapContainer.style.display !== 'none';
                
                // Track "Map View" Button Click
                if (!isMapVisible) {
                    window.dataLayer = window.dataLayer || [];
                    window.dataLayer.push({
                        event: 'map_view_clicked',
                        city: document.title.split('|')[0].trim() // Captures "CityName" from title
                    });
                }

                if (isMapVisible) {
                    showGrid();
                } else {
                    showMap();
                }
            });
            
            if (backToListBtn) {
                backToListBtn.addEventListener('click', showGrid);
            }
        }

        // Share Button Logic
        const shareBtn = document.getElementById('share-btn');
        if (shareBtn) {
            shareBtn.addEventListener('click', async () => {
                const url = shareBtn.dataset.url;
                const title = shareBtn.dataset.title;
                
                // Track "Share" Button Click
                window.dataLayer = window.dataLayer || [];
                window.dataLayer.push({
                    event: 'share_location',
                    location_name: document.title.split('|')[0].trim()
                });

                if (navigator.share) {
                    try {
                        await navigator.share({ title, url });
                    } catch (err) {
                        // User cancelled
                    }
                } else {
                    try {
                        await navigator.clipboard.writeText(url);
                        shareBtn.classList.add('copied');
                        setTimeout(() => {
                            shareBtn.classList.remove('copied');
                        }, 2000);
                    } catch (err) {
                        console.error('Failed to copy:', err);
                    }
                }
            });
        }
    });
  </script>
</Layout>