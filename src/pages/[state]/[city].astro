  <script>
    import { toPng } from 'html-to-image';

    document.addEventListener('DOMContentLoaded', () => {
        // ... (Info/Tooltip logic omitted, assuming standard layout logic handled elsewhere or if needed) ...

        // Toggle Map/Grid Logic
        const mapToggleBtn = document.getElementById('map-toggle-btn');
        const backToListBtn = document.getElementById('back-to-list-btn');
        const mapContainer = document.getElementById('city-map-container');
        const gridContainer = document.getElementById('recommendation-grid');

        if (mapToggleBtn && mapContainer && gridContainer) {
            function showMap() {
                mapContainer.style.display = 'block';
                gridContainer.style.display = 'none';
                mapToggleBtn.classList.add('active');
                mapToggleBtn.querySelector('.btn-text').textContent = "Grid View";
                
                // Fix map rendering
                setTimeout(() => {
                    window.dispatchEvent(new Event('resize'));
                }, 100);
            }
            
            function showGrid() {
                mapContainer.style.display = 'none';
                gridContainer.style.display = 'grid'; // Assuming grid layout
                mapToggleBtn.classList.remove('active');
                mapToggleBtn.querySelector('.btn-text').textContent = "Map View";
            }
            
            // Toggle function
            mapToggleBtn.addEventListener('click', () => {
                const isMapVisible = mapContainer.style.display !== 'none';
                
                // Track "Map View" Button Click
                if (!isMapVisible) {
                    window.dataLayer = window.dataLayer || [];
                    window.dataLayer.push({
                        event: 'map_view_clicked',
                        city: document.title.split('|')[0].trim() // Captures "CityName" from title
                    });
                }

                if (isMapVisible) {
                    showGrid();
                } else {
                    showMap();
                }
            });
            
            if (backToListBtn) {
                backToListBtn.addEventListener('click', showGrid);
            }
        }

        // Share Button Logic
        const shareBtn = document.getElementById('share-btn');
        if (shareBtn) {
            shareBtn.addEventListener('click', async () => {
                const url = shareBtn.dataset.url;
                const title = shareBtn.dataset.title;
                
                // Track "Share" Button Click
                window.dataLayer = window.dataLayer || [];
                window.dataLayer.push({
                    event: 'share_location',
                    location_name: document.title.split('|')[0].trim()
                });

                if (navigator.share) {
                    try {
                        await navigator.share({ title, url });
                    } catch (err) {
                        // User cancelled
                    }
                } else {
                    try {
                        await navigator.clipboard.writeText(url);
                        shareBtn.classList.add('copied');
                        setTimeout(() => {
                            shareBtn.classList.remove('copied');
                        }, 2000);
                    } catch (err) {
                        console.error('Failed to copy:', err);
                    }
                }
            });
        }

        // Download List Logic
        const downloadBtn = document.getElementById('download-list-btn');
        const loadingOverlay = document.getElementById('download-loading-overlay');

        if (downloadBtn) {
            downloadBtn.addEventListener('click', async () => {
                const cityName = document.title.split('|')[0].trim();
                
                // Show Loading Overlay
                if (loadingOverlay) loadingOverlay.classList.add('visible');

                // 1. Create a container for the clone to ensure styles resolve correctly
                const container = document.createElement('div');
                container.style.position = 'absolute';
                container.style.top = '-9999px';
                container.style.left = '-9999px';
                container.style.width = '1200px'; // Force Desktop Width
                container.style.height = 'auto';
                container.style.overflow = 'hidden'; // changes
                container.style.zIndex = '-1';
                document.body.appendChild(container);

                try {
                    // 2. Clone the body
                    // We wrap it in a div to serve as the simplified root
                    const wrapper = document.createElement('div');
                    wrapper.className = 'download-wrapper'; 
                    wrapper.style.backgroundColor = '#ffffff';
                    wrapper.style.width = '100%';
                    wrapper.style.height = '100%';
                    
                    // Copy innerHTML is often safer for styles than cloneNode(true) for specific isolation, 
                    // but cloneNode is better for preserving some state. 
                    // Let's use cloneNode(true) of body, but we need to match the specific layout constraints.
                    // Actually, let's just clone the main parts we want: Header, Main, Footer.
                    // But body has the styles.
                    
                    const clone = document.body.cloneNode(true);
                    
                    // 3. Clean up the Clone (Remove unwanted elements)
                    const elementsToRemoveSelectors = [
                        'noscript',
                        '#feedback-popup',
                        '#city-request-widget',
                        '.nearby-destinations',
                        '.action-buttons',
                        '.bottom-map-toggle',
                        '#map-toggle-btn', // Just in case
                        'script', // Remove scripts to avoid re-execution
                        'iframe',  // Remove iframes (like GTM) to avoid reload issues
                        '.site-footer', // Remove default footer
                        'footer',       // Remove any other footer tags
                        '#download-loading-overlay' // Don't include the loading overlay itself
                    ];

                    elementsToRemoveSelectors.forEach(selector => {
                        const elements = clone.querySelectorAll(selector);
                        elements.forEach(el => el.remove());
                    });
                    
                    // Force clone to fit our container
                    clone.style.width = '1200px';
                    clone.style.minWidth = '1200px';
                    clone.style.overflow = 'visible';
                    // Reset any transforms that might interfere
                    clone.style.transform = 'none';
                    
                    // Add Simple Footer Text
                    const simpleFooter = document.createElement('div');
                    simpleFooter.textContent = 'www.whereinindia.online';
                    simpleFooter.style.textAlign = 'center';
                    simpleFooter.style.padding = '2rem';
                    simpleFooter.style.width = '100%';
                    simpleFooter.style.fontSize = '1.2rem';
                    simpleFooter.style.fontWeight = '600';
                    simpleFooter.style.color = '#333';
                    simpleFooter.style.backgroundColor = '#fff';
                    simpleFooter.style.fontFamily = getComputedStyle(document.body).fontFamily;
                    
                    clone.appendChild(simpleFooter);

                    // force grid display -> Ensure List View is active in the screenshot
                    const grid = clone.querySelector('#recommendation-grid');
                    if (grid) {
                        grid.style.display = 'grid';
                    }
                    const mapContainer = clone.querySelector('#city-map-container');
                    if (mapContainer) {
                        mapContainer.style.display = 'none';
                    }

                    // Fix Card Visibility (animations cause opacity: 0)
                    const cards = clone.querySelectorAll('.recommendation-card');
                    cards.forEach(card => {
                        card.style.opacity = '1';
                        card.style.transform = 'none';
                        card.style.animation = 'none';
                    });

                    // Fix List Numbers (CSS counters often fail in clones)
                    const lists = clone.querySelectorAll('.recommendation-card ol');
                    lists.forEach(ol => {
                        const items = ol.querySelectorAll('li');
                        items.forEach((li, index) => {
                            // Create manual number span
                            const numSpan = document.createElement('span');
                            numSpan.textContent = `${index + 1}. `;
                            numSpan.style.marginRight = '0.5rem';
                            numSpan.style.color = '#888'; 
                            numSpan.style.minWidth = '1.5em';
                            numSpan.style.fontWeight = '400';
                            
                            // Insert at start
                            li.insertBefore(numSpan, li.firstChild);
                        });
                    });

                    // Fix Logo & Images (Relative paths might fail in blob)
                    const images = clone.querySelectorAll('img');
                    images.forEach(img => {
                        if (img.src && img.src.startsWith('/')) {
                             img.src = window.location.origin + img.getAttribute('src');
                        }
                    });

                    // Inject Style to hide original CSS counters
                    const style = document.createElement('style');
                    style.innerHTML = `
                        .recommendation-card li::before { content: none !important; }
                        .recommendation-card li { display: flex; align-items: center; } 
                    `;
                    clone.appendChild(style);
                    
                    wrapper.appendChild(clone);
                    container.appendChild(wrapper);

                    // Allow images to load? cloneNode copies incomplete images sometimes.
                    // toPng handles it, ideally.

                    // 4. Generate Image
                    const dataUrl = await toPng(wrapper, { 
                        cacheBust: true, 
                        width: 1200, // Explicitly tell html-to-image the width
                        backgroundColor: '#ffffff',
                        style: {
                             // Ensure fonts rendering
                            fontFamily: getComputedStyle(document.body).fontFamily
                        }
                    });

                    const link = document.createElement('a');
                    link.download = `${cityName}-guide.png`;
                    link.href = dataUrl;
                    link.click();

                } catch (error) {
                    console.error('Download failed:', error);
                } finally {
                    // 5. Cleanup
                    document.body.removeChild(container);
                    // Hide Overlay
                    if (loadingOverlay) loadingOverlay.classList.remove('visible');
                }
            });
        }
    });
  </script>
