---
import Layout from "~/layouts/Layout.astro";
import travelKits from "~/data/travel-kits.json";

const { categories, items } = travelKits;
---

<Layout
    title="Discover Indias Travel Essentials | Where In India"
    description="Curated travel essentials, photography gear, and smart tech for your Indian adventures."
    ogImage="https://www.whereinindia.online/flag.png"
>
    <main>
        <!-- Hero Section (Split Screen) -->
        <header class="hero">
            <div class="hero-image travel-hero-bg"></div>
            <div class="hero-text">
                <h1>Discover Indias Travel Essentials</h1>
                <p>
                    Reliable gear, smart tech, and professional photography
                    tools tested across diverse Indian landscapes.
                </p>
            </div>
        </header>

        <!-- Travel Kits Section -->
        <section class="kits-section">
            <div class="kits-container">
                <div class="shop-layout">
                    <!-- Sidebar Filters -->
                    <aside class="shop-sidebar">
                        <div class="sidebar-header">
                            <h3>Categories</h3>
                            <button
                                id="mobile-filter-toggle"
                                class="mobile-filter-toggle"
                                aria-label="Toggle categories"
                            >
                                <span class="toggle-icon">‚ñº</span>
                            </button>
                        </div>
                        <div
                            class="category-filters"
                            id="category-filters-container"
                        >
                            <button
                                class="category-btn active"
                                data-category="all"
                            >
                                <span class="btn-icon">‚ú®</span> All Items
                            </button>
                            {
                                categories.map((cat) => (
                                    <button
                                        class="category-btn"
                                        data-category={cat.id}
                                    >
                                        <span class="btn-icon">{cat.icon}</span>{" "}
                                        {cat.name}
                                    </button>
                                ))
                            }
                        </div>
                    </aside>

                    <!-- Items Grid -->
                    <div class="items-grid" id="items-grid">
                        {
                            items.map((item) => (
                                <a
                                    href={item.affiliateLink}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="item-card"
                                    data-category={item.category}
                                >
                                    <div class="item-image-wrapper">
                                        <img
                                            src={item.image}
                                            alt={item.name}
                                            class="item-image"
                                            loading="lazy"
                                        />
                                        {item.bestSeller && (
                                            <span class="bestseller-badge">
                                                Best Seller
                                            </span>
                                        )}
                                        <div class="item-overlay">
                                            <span class="view-btn">
                                                View Details ‚Üó
                                            </span>
                                        </div>
                                    </div>
                                    <div class="item-content">
                                        <div class="item-header">
                                            <span class="item-category">
                                                {
                                                    categories.find(
                                                        (c) =>
                                                            c.id ===
                                                            item.category,
                                                    )?.name
                                                }
                                            </span>
                                            <span class="item-price">
                                                {item.price}
                                            </span>
                                        </div>
                                        <h3 class="item-title">{item.name}</h3>
                                        <p class="item-desc">
                                            {item.description}
                                        </p>
                                    </div>
                                </a>
                            ))
                        }
                    </div>

                    <!-- Empty State -->
                    <div
                        id="empty-state"
                        class="empty-state"
                        style="display: none;"
                    >
                        <div class="empty-state-icon">üîç</div>
                        <h3>No items found</h3>
                        <p>Try selecting a different category</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script is:inline>
        document.addEventListener("DOMContentLoaded", () => {
            // --- Filter Logic ---
            const filterBtns = document.querySelectorAll(".category-btn");
            const items = document.querySelectorAll(".item-card");
            const emptyState = document.getElementById("empty-state");
            const grid = document.getElementById("items-grid");

            // --- Mobile Dropdown Logic ---
            const mobileToggle = document.getElementById(
                "mobile-filter-toggle",
            );
            const filtersContainer = document.getElementById(
                "category-filters-container",
            );
            const toggleIcon = mobileToggle.querySelector(".toggle-icon");

            if (mobileToggle) {
                mobileToggle.addEventListener("click", () => {
                    filtersContainer.classList.toggle("open");
                    const isOpen = filtersContainer.classList.contains("open");
                    toggleIcon.style.transform = isOpen
                        ? "rotate(180deg)"
                        : "rotate(0deg)";
                });
            }

            // Close dropdown when a category is selected on mobile
            filterBtns.forEach((btn) => {
                btn.addEventListener("click", () => {
                    // Update active state
                    filterBtns.forEach((b) => b.classList.remove("active"));
                    btn.classList.add("active");

                    if (window.innerWidth <= 900) {
                        filtersContainer.classList.remove("open");
                        toggleIcon.style.transform = "rotate(0deg)";
                    }

                    const category = btn.dataset.category;
                    let visibleCount = 0;

                    items.forEach((item) => {
                        if (
                            category === "all" ||
                            item.dataset.category === category
                        ) {
                            item.style.display = "flex";
                            visibleCount++;
                        } else {
                            item.style.display = "none";
                        }
                    });

                    if (visibleCount === 0) {
                        grid.style.display = "none";
                        emptyState.style.display = "flex";
                    } else {
                        grid.style.display = "grid";
                        emptyState.style.display = "none";
                    }
                });
            });
        });
    </script>
</Layout>

<style>
    /* Travel Hero Override */
    .travel-hero-bg {
        background-image: url("/public/essentials.jpg");
        background-size: 100%;
        background-repeat: no-repeat;
        background-color: #f4f4f4;
    }

    /* Kits Section */
    .kits-section {
        padding: 4rem 1rem;
        background: #fff;
        min-height: 600px;
    }
    .kits-container {
        max-width: 1280px;
        margin: 0 auto;
    }

    /* Filters */
    /* Shop Layout - Sidebar & Grid */
    .shop-layout {
        display: grid;
        grid-template-columns: 250px 1fr;
        gap: 2rem;
        align-items: start;
    }

    /* Sidebar Styles */
    .shop-sidebar {
        position: sticky;
        top: 2rem;
        background: #fff;
        padding: 1.5rem;
        border: 1px solid #eee;
        border-radius: 12px;
        z-index: 50;
    }
    .sidebar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #eee;
    }
    .sidebar-header h3 {
        font-size: 1.1rem;
        font-weight: 700;
        margin: 0;
    }

    .mobile-filter-toggle {
        display: none; /* Hidden on desktop */
        background: none;
        border: none;
        font-size: 0.9rem;
        cursor: pointer;
        padding: 4px;
        color: #666;
    }

    .category-filters {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .category-btn {
        text-align: left;
        padding: 0.6rem 0.8rem;
        border-radius: 6px;
        background: transparent;
        border: none;
        color: #666;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.2s ease;
        width: 100%;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        gap: 0.8rem;
    }
    .btn-icon {
        font-size: 1.1rem;
    }
    .category-btn:hover {
        background: #f9f9f9;
        color: #1a1a1a;
    }
    .category-btn.active {
        background: #f0f0f0;
        color: #000;
        font-weight: 600;
    }

    /* Items Grid */
    .items-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    /* Responsive adjustments */
    @media (max-width: 900px) {
        .shop-layout {
            grid-template-columns: 1fr; /* Stack on tablet/mobile */
            gap: 1.5rem;
        }
        .shop-sidebar {
            position: sticky;
            top: 1rem; /* Stick to top slightly padded */
            padding: 1rem;
            margin-bottom: 1rem;
            z-index: 100;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        }
        .mobile-filter-toggle {
            display: flex; /* Show toggle */
            align-items: center;
            justify-content: center;
            width: 24px;
            height: 24px;
            transition: transform 0.3s ease;
        }
        .category-filters {
            display: none; /* Hide default on mobile */
            flex-direction: column;
            padding-top: 0.5rem;
            animation: slideDown 0.3s ease-out forwards;
        }
        .category-filters.open {
            display: flex; /* Show when open */
            border-top: 1px solid #f0f0f0;
            margin-top: 0.5rem;
        }

        .toggle-icon {
            display: inline-block;
            transition: transform 0.3s ease;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    }
    .item-card {
        text-decoration: none;
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        display: flex;
        flex-direction: column;
        border: 1px solid #f0f0f0;
    }
    .item-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.06);
        border-color: #e2e2e2;
    }

    .item-image-wrapper {
        position: relative;
        padding-top: 100%; /* 1:1 Aspect Ratio */
        background: #f9f9f9;
        overflow: hidden;
    }
    .item-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
    }
    .item-card:hover .item-image {
        transform: scale(1.05);
    }

    .bestseller-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background: #1a1a1a;
        color: #fff;
        font-size: 0.65rem;
        font-weight: 700;
        padding: 4px 8px;
        border-radius: 4px;
        z-index: 2;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .item-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 1;
    }
    .item-card:hover .item-overlay {
        opacity: 1;
    }
    .view-btn {
        background: #fff;
        color: #1a1a1a;
        padding: 0.6rem 1.25rem;
        border-radius: 100px;
        font-weight: 600;
        font-size: 0.85rem;
        transform: translateY(10px);
        transition: transform 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
    }
    .item-card:hover .view-btn {
        transform: translateY(0);
    }

    .item-content {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .item-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.4rem;
    }
    .item-category {
        font-size: 0.7rem;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
    }
    .item-price {
        font-weight: 700;
        font-size: 0.9rem;
        color: #1a1a1a;
        background: #f4f4f4;
        padding: 3px 6px;
        border-radius: 4px;
    }

    .item-title {
        font-size: 1rem;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 0.4rem;
        line-height: 1.3;
    }
    .item-desc {
        color: #666;
        font-size: 0.85rem;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .empty-state {
        grid-column: 1 / -1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 4rem 0;
        text-align: center;
    }
    .empty-state-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }
    .empty-state h3 {
        font-size: 1.25rem;
        color: #1a1a1a;
        margin-bottom: 0.5rem;
    }

    @media (max-width: 768px) {
        /* Mobile grid adjustments handled by shop-layout query */
        .items-grid {
            gap: 1rem;
            grid-template-columns: repeat(
                2,
                1fr
            ); /* Force 2 columns on mobile */
        }

        .item-content {
            padding: 0.75rem;
        }
        .item-title {
            font-size: 0.9rem;
            margin-bottom: 0.25rem;
        }
        .item-price {
            font-size: 0.8rem;
            padding: 2px 5px;
        }
        .item-desc {
            font-size: 0.8rem;
            display: none; /* Hide desc on mobile for compactness */
        }
        .view-btn {
            padding: 0.4rem 0.8rem;
            font-size: 0.75rem;
        }
        .bestseller-badge {
            font-size: 0.6rem;
            padding: 3px 6px;
            top: 8px;
            left: 8px;
        }
        .item-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.25rem;
        }
        .item-category {
            font-size: 0.65rem;
        }
    }
</style>
