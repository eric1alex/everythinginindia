---
import Layout from "~/layouts/Layout.astro";
import reviews from "~/data/reviews.json";
---

<Layout
    title="India Travel Reviews - What Travelers Say | Where In India"
    description="Read honest reviews from travelers who explored India using our curated recommendations. Real feedback on cafes, hotels, attractions, and hidden gems across every Indian state."
>
    <main class="reviews-page">
        <header class="reviews-header">
            <h1>What Travelers Say About Where In India</h1>
            <p>
                Real reviews from explorers who used our curated India travel
                guide
            </p>
        </header>

        <div class="reviews-content">
            {
                reviews.map((review) => (
                    <div class="review-card">
                        <blockquote>"{review.text}"</blockquote>
                        <div class="review-footer">
                            <p class="review-author">
                                — {review.author}, {review.source}
                            </p>
                            {review.link && (
                                <a
                                    href={review.link}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="reddit-link"
                                >
                                    View on Reddit ↗
                                </a>
                            )}
                        </div>
                    </div>
                ))
            }
        </div>
    </main>
</Layout>

<style>
    .reviews-page {
        background-color: var(--background-color);
        min-height: 60vh;
    }

    .reviews-header {
        text-align: center;
        padding: 3rem 1.5rem 2rem;
        background-color: #f8f9fa;
        border-bottom: 1px solid #e2e2e2;
    }

    .reviews-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 0.25rem;
    }

    .reviews-header p {
        font-size: 1rem;
        color: #666;
    }

    .reviews-content {
        max-width: 700px;
        margin: 0 auto;
        padding: 2.5rem 1rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .review-card {
        background: #fff;
        border: 1px solid #e2e2e2;
        border-radius: 8px;
        padding: 1.5rem;
    }

    .review-card blockquote {
        font-style: italic;
        color: #444;
        font-size: 1rem;
        line-height: 1.6;
        margin: 0;
    }

    .review-author {
        margin-top: 1rem;
        font-size: 0.85rem;
        color: #888;
    }

    .review-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .review-footer .review-author {
        margin-top: 0;
    }

    .reddit-link {
        font-size: 0.8rem;
        color: #555;
        text-decoration: none;
        background: #f4f4f4;
        border: 1px solid #ddd;
        padding: 0.4rem 0.75rem;
        border-radius: 5px;
        transition: all 0.2s ease;
    }

    .reddit-link:hover {
        background: #eee;
        border-color: #ccc;
    }

    @media (min-width: 640px) {
        .reviews-header {
            padding: 4rem 1.5rem 3rem;
        }

        .reviews-header h1 {
            font-size: 2.5rem;
        }
    }
</style>
